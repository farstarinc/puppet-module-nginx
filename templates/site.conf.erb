<% if aliases.any? %>
server {
  listen 80;
  server_name<% aliases.each do |a| %> <%= a %><% end %>;
  rewrite ^ http://<%= domain %>$request_uri? permanent;
}
<% end %>

<% if upstreams.any? %>
upstream <%= name %> {
  <% upstreams.each do |upstream| %>
  server <%= upstream %> fail_timeout=0;
  <% end %>
}
<% end %>

server {
  <% if default_vhost %>listen 80 default deferred;<% end %>
  client_max_body_size 4G;
  server_name <%= domain %>;

  root <%= root %>;

  access_log  /var/log/nginx/<%= name %>.access.log;

  keepalive_timeout 5;

  <% if mediaroot.any? %>
  location = /favicon.ico {
    alias <%= mediaroot %>/favicon.ico;
  }

  location <%= mediaprefix %> {
    alias <%= mediaroot %>;
    expires max;
  }
  <% end %>

  location / {

    <% if upstreams.any? %>
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;

    try_files $uri $uri/ @<%= name %>;
    <% else %>
    index  index.html;
    <% end %>

    <% if rewrite_missing_html_extension %>
    try_files $uri $uri/ $uri.html;
    <% end %>
  }

  <% if upstreams.any? %>
  location @<%= name %> {
    proxy_pass http://<%= name %>;
  }
  <% end %>
}
